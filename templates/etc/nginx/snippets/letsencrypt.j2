# {{ ansible_managed }}

location ^~ /{{ ubuntu_1804_letsencrypt_acme_challenge_path }}/ {
  default_type "text/plain";

  root "{{ ubuntu_1804_letsencrypt_webroot_path }}/{{ ubuntu_1804_letsencrypt_acme_challenge_path }}";

  try_files $uri @missing;
}

location @missing {
  if ($host != '{{ ansible_host }}') {
    return 302 https://{{ ubuntu_1804_letsencrypt_http_challenge_forward_host }}$request_uri;
  }
}

location = /{{ ubuntu_1804_letsencrypt_acme_challenge_path }}/ {
  return 404;
}